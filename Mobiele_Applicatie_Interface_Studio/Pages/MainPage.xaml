<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Mobiele_Applicatie_Interface_Studio.Pages.MainPage"
    BackgroundColor="Black">
    

    <ScrollView>
        <VerticalStackLayout Padding="20,40,20,20" Spacing="20">

            <!-- Titel en gebruiker -->
            <HorizontalStackLayout VerticalOptions="Start" Spacing="10">
                <Label Text="Uw bestellingen"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="Black"
                       BackgroundColor="#FF7F7F"
                       Padding="10,5"
                       HorizontalOptions="StartAndExpand"/>
                <Frame Padding="10,5" CornerRadius="20" BackgroundColor="White" HasShadow="False" VerticalOptions="Center">
                    <Label Text="John Doe" TextColor="Black"/>
                </Frame>
            </HorizontalStackLayout>

            <!-- In behandeling -->
            <Label Text="In behandeling:" FontSize="20" FontAttributes="Bold" TextColor="White"/>
            <CollectionView ItemsSource="{Binding InBehandelingOrders}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Black" CornerRadius="8" Padding="10" Margin="0,0,0,10" BackgroundColor="#E0E0E0">
                            <VerticalStackLayout>
                                <Label Text="{Binding OrderId}" FontAttributes="Bold" FontSize="16"/>
                                <Label Text="{Binding Address}" FontSize="14"/>
                                <Grid ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center" Margin="0,5,0,0">
                                    <Frame Grid.Column="0" Padding="5,2" BackgroundColor="Yellow" CornerRadius="8" HasShadow="False" VerticalOptions="Center">
                                        <Label Text="Onderweg" FontSize="12" TextColor="Black"/>
                                    </Frame>
                                    <Label Grid.Column="1" Text="{Binding TimeWindow}" FontSize="14" HorizontalOptions="Center" VerticalOptions="Center"/>
                                    <Button Grid.Column="2" Text="Route" BackgroundColor="LimeGreen" TextColor="White" CornerRadius="16" HeightRequest="32" WidthRequest="80" Clicked="OnRouteClicked" VerticalOptions="Center"/>
                                </Grid>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Niet Bezorgd -->
            <Label Text="Niet Bezorgd:" FontSize="20" FontAttributes="Bold" TextColor="White"/>
            <CollectionView ItemsSource="{Binding NietBezorgdOrders}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Black" CornerRadius="8" Padding="10" Margin="0,0,0,10" BackgroundColor="#E0E0E0">
                            <VerticalStackLayout>
                                <Label Text="{Binding OrderId}" FontAttributes="Bold" FontSize="16"/>
                                <Label Text="{Binding Address}" FontSize="14"/>
                                <Grid ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center" Margin="0,5,0,0">
                                    <Frame Grid.Column="0" Padding="5,2" BackgroundColor="Yellow" CornerRadius="8" HasShadow="False" VerticalOptions="Center">
                                        <Label Text="Niet bezorgd" FontSize="12" TextColor="Black"/>
                                    </Frame>
                                    <Label Grid.Column="1" Text="{Binding TimeWindow}" FontSize="14" HorizontalOptions="Center" VerticalOptions="Center"/>
                                    <Button Grid.Column="2" Text="Route" BackgroundColor="LimeGreen" TextColor="White" CornerRadius="16" HeightRequest="32" WidthRequest="80" Clicked="OnRouteClicked" VerticalOptions="Center"/>
                                </Grid>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Bezorgd -->
            <Label Text="Bezorgd:" FontSize="20" FontAttributes="Bold" TextColor="White"/>
            <CollectionView ItemsSource="{Binding BezorgdOrders}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Black" CornerRadius="8" Padding="10" Margin="0,0,0,10" BackgroundColor="#E0E0E0">
                            <VerticalStackLayout>
                                <Label Text="{Binding OrderId}" FontAttributes="Bold" FontSize="16"/>
                                <Label Text="{Binding Address}" FontSize="14"/>
                                <Grid ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center" Margin="0,5,0,0">
                                    <Frame Grid.Column="0" Padding="5,2" BackgroundColor="Yellow" CornerRadius="8" HasShadow="False" VerticalOptions="Center">
                                        <Label Text="Bezorgd" FontSize="12" TextColor="Black"/>
                                    </Frame>
                                    <Label Grid.Column="1" Text="{Binding TimeWindow}" FontSize="14" HorizontalOptions="Center" VerticalOptions="Center"/>
                                    <Button Grid.Column="2" Text="Route" BackgroundColor="LimeGreen" TextColor="White" CornerRadius="16" HeightRequest="32" WidthRequest="80" Clicked="OnRouteClicked" VerticalOptions="Center"/>
                                </Grid>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button
                Text="Go to BestellingDetails"
                Clicked="OnBestellingDetailsClicked"
                HorizontalOptions="Fill" />

            <Button
                Text="Go to RoutePagina"
                Clicked="OnRoutePaginaClicked"
                HorizontalOptions="Fill" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
